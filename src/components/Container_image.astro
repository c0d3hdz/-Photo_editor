---
import FilterOptions from "./Filter_options.jsx"
---



<div class="Container">
    <div class="Container__image">
        <img class="image" src="/assets/Photo.jpg" alt="Photo Editor" />
    </div>
</div>
<FilterOptions client:visible/>




<style>
    .Container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: auto;
        width: 50%;
        height: 50%;
    }
    .Container__image {
        width: 90%;
        height: 100%;
        overflow: hidden;
        transition: height 0.6s ease;
        padding: 20px;
        border-bottom: 1px double #ffffff7d;
        border-top: 1px double #ffffff7d;
        border-radius: 10px;
        background-image: linear-gradient(0deg , #40404038, #ffffff00 5%);
    }
    .image{
        width: 100%;
        height: 100%;
        image-rendering: optimizeSpeed;
        image-rendering: -moz-crisp-edges;
        object-fit: cover;
    }
    @media (max-width: 768px) {
        .Container {
            height: 250px;
            width: 90%;
        }
    }
</style>